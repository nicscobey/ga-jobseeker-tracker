<!DOCTYPE html>
<html lang="en">

<%- include('../../partials/head.ejs'); %>


    <body>
        <%- include('../../partials/navbar.ejs') %>
            <div id="search-applications-page" class="in-app-page">
                <h3 class="title is-3">My Contacts</h3>
                <form class="control flex-column" id="filter-index-form">
                    <div class="field flex-center">
                        <div class="control has-icons-left search-field ">
                            <input type="search" class="yellow-outline-button button fixed-size-button search-field-left"
                                placeholder="Search for a contact..." id="filter-index-term">
                            <span class="icon is-small is-left search-icon">
                                <i class="fas fa-search"></i>
                            </span>
                        </div>
                        <div class="field select">
                            <select id="sort-my-apps" class="search-field search-field-right yellow-outline-button button">
                                <option class="placeholder-color" value="" disabled selected>Sort By...</option>
                                <option value="First Name">First Name</option>
                                <option value="Last Name">Last Name</option>
                                <option value="Last Contacted">Last Contacted</option>
                                <option value="Employer" type="submit" action="">Employer</option>
                            </select>
                        </div>
                    </div>
                    <button type="submit"
                        class="fixed-size-button button is-rounded is-primary yellow-solid-button">Search</button>
                </form>
                <article>
                    
                    <div class="my-list">
                        
                        <p class="flex-center">
                            Showing&nbsp;<b><%=contacts.length%></b>&nbsp;result<%if (contacts.length !== 1) {%>s<%}%><% if (searchTerm !== "" && searchTerm !== "null") {%>&nbsp;for&nbsp;<b><%=searchTerm%></b><%}%>&nbsp;&nbsp;&nbsp;
                        </p>
                        
                        <% for (contact of contacts) {%>
                            <div class="job-card">
                                <div class="job-card-header">
                                    <a href="/student/contacts/<%=contact._id%>" class="title is-6 job-card-employer">
                                        <%=contact.firstName%> <%=contact.lastName%>
                                    </a>
                                    <div class="card-popout job-card-popout-rejected" id="popout-<%=contact._id%>">
                                        <p><a class="card-popout-link" href="/student/contacts/<%=contact._id%>">Review</a></p>
                                        <p>
                                            <a class="card-popout-link" href="/student/contacts/<%=contact._id%>/edit">Update</a>
                                        </p>
                                    </div>
                                    <div id="ellipse-container-<%=contact._id%>" class="ellipse-container">
                                        <i class="fas fa-ellipsis-v job-card-ellipse"></i>
                                    </div>
                                </div>
                                <!--Array of Months-->
                                <% const months={ 0: "January" , 1: "February" , 2: "March" , 3: "April" , 4: "May" ,
                                    5: "June" , 6: "July" , 7: "August" , 8: "September" , 9: "October" , 10: "November" ,
                                    11: "December" } %>
                                    <div class="job-card-bottom">
                                        <p>
                                            <b>Employer: </b>
                                            <%=contact.employer%>
                                        </p>
                                        <p><b>Last Contact:</b>
                                            <%const month=contact.latestContact.getMonth()%>
                                                <%const date=`${months[contact.latestContact.getMonth()]}
                                                    ${contact.latestContact.getDate()}, ${contact.latestContact.getFullYear()}`%>
                                                    <%=date%>
                                        </p>
                                        <p>
                                            <b>Email:</b>
                                            <%=contact.email%>
                                        </p>
                                        <p>
                                            <b>Phone:</b>
                                            <%=contact.phone%>
                                        </p>
                                    </div>
                            </div>
                            <%}%>
                    </div>
                </article>
                
            </div>
    </body>

</html>