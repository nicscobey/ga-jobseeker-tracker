<!DOCTYPE html>
<html lang="en">

<%- include('../../partials/head.ejs'); %>


    <body>


        <%- include('../../partials/navbar.ejs') %>
            <div id="application-details-page" class="in-app-page">
                <div class="application-details-page-details margin-20px">
                    <h3 class="subtitle is-3 center-text">
                        <b><%=contact.firstName%>&nbsp;<%=contact.lastName%></b>
                    </h3>
                    <h5 class="subtitle is-5 center-text">
                        <b><%=contact.employer%></b>
                    </h5>
                    <h5 class="subtitle is-5 center-text">
                        <b><%=contact.email%></b>
                    </h5>
                    <h5 class="subtitle is-5 center-text">
                        <b><%=contact.phone%></b>
                    </h5>
                    <h5 class="subtitle is-5 center-text"><b>Last Contacted: </b><% const months={ 0: "January" , 1: "February" , 2: "March" , 3: "April" , 4: "May" ,
                        5: "June" , 6: "July" , 7: "August" , 8: "September" , 9: "October" , 10: "November" ,
                        11: "December" } %><%const month=contact.latestContact.getMonth()%>
                        <%const date=`${months[contact.latestContact.getMonth()]}
                            ${contact.latestContact.getDate()}, ${contact.latestContact.getFullYear()}`%>
                            <%=date%>
                    </h5>
                    <a href="/student/contacts/<%=contact._id%>/edit" class="flex-center margin-20px">
                        <button class="fixed-size-button button is-rounded is-primary yellow-solid-button">Update</button>
                    </a>
                    <div class="app-details">
                        <h5 class="subtitle is-5"><b>Notes</b></h5>
                        <p>
                            <%=contact.notes%>
                        </p>
                    </div>
                </div>
                <div class="flex-center margin-20px">
                    <button class="fixed-size-button button is-rounded yellow-outline-button delete-app-button">Delete</button>
                </div>

                <div class="modal" id="show-app-modal">
                    <div class="modal-background"></div>
                    <div class="modal-card">
                        <header class="modal-card-head">
                            <p class="modal-card-title">Delete Contact?</p>
                            <button class="delete show-app-close-modal" aria-label="close"></button>
                        </header>
                        <section class="modal-card-body">
                            Are you sure you wish to delete all data related to this contact? Once deleted, this data cannot be recovered.
                        </section>
                        <footer class="modal-card-foot">
                            <form class="no-margin" action="/student/contacts/<%=contact._id%>?_method=DELETE" method="POST">
                                <input type="submit" class="button is-danger show-app-delete-button" value="Delete"></input>
                            </form>
                            <button class="button cancel-delete-button">Cancel</button>
                        </footer>
                    </div>
                </div>
            </div>


        
    </body>

</html>