                <form class="control flex-column" id="filter-index-courses">
                    <div class="field flex-center">
                        <div class="control has-icons-left search-field">
                            <input type="search" class="yellow-outline-button button fixed-size-button is-rounded"
                                placeholder="Search for a student..." id="filter-index-term">
                            <span class="icon is-small is-left search-icon">
                                <i class="fas fa-search"></i>
                            </span>
                        </div>
                    </div>
                    
                    <button type="submit" class="fixed-size-button button is-rounded is-primary yellow-solid-button">Search</button>
                </form>
                <article>
                    
                    <div class="my-list">
                        
                        
                        <% for (student of students) {%>
                            <div class="job-card">
                                <div class="job-card-header">
                                    <a class="title is-6 job-card-employer"><%=student.firstName%>&nbsp;<%=student.lastName%>
                                    </a>
                                    <div class="card-popout job-card-popout-rejected">
                                        <p><a class="card-popout-link">Review</a></p>
                                        <p><a class="card-popout-link">Update</a></p>
                                    </div>
                                    <div class="ellipse-container">
                                        <i class="fas fa-ellipsis-v job-card-ellipse"></i>
                                    </div>
                                </div>
                                <!--Array of Months-->
                                <% const months={ 0: "January" , 1: "February" , 2: "March" , 3: "April" , 4: "May" ,
                                    5: "June" , 6: "July" , 7: "August" , 8: "September" , 9: "October" , 10: "November" ,
                                    11: "December" } %>
                                    <div class="job-card-bottom">
                                        <p>
                                            <b>Total Applications: </b>##
                                        </p>
                                        <p>
                                            <b>Applications this Week:</b>##
                                        </p>
                                    </div>
                            </div>
                            <%}%>
                    </div>
                </article>
                
            </div>
    </body>

</html>